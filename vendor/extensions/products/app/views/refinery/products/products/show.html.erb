<% content_for :body_content_title do %>
  <%= @product.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @product.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @product.description %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @product.price %>
    </p>
  </section>
  <section>
    <h1>Downloadpath</h1>
    <p>
      <%=raw @product.downloadpath %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @product.image, nil %>
    </p>
  </section>
  <section>
    <h1>Code</h1>
    <p>
      <%=raw @product.code %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @product.author %>
    </p>
  </section>
  <section>
    <h1>Exchange</h1>
    <p>
      <%=raw @product.exchange %>
    </p>
  </section>
  <section>
    <h1>Bonus</h1>
    <p>
      <%=raw @product.bonus %>
    </p>
  </section>
  <section>
    <h1>Subcategoria</h1>
    <p>
      <%=raw @product.subcategoria_id %>
    </p>
  </section>

<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="products">
      <% @products.each do |product| %>
        <li>
          <%= link_to product.name, refinery.products_product_path(product) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
