
<%= form_for [refinery, :products_admin, @product] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product,
              :include_object_name => true %>
 <div class='field'>
<ul id="menu">

  <%for category in ::Refinery::Categories::Category.roots %>
     <li>  <%= category.name %></li>
        <% unless category.children.empty? %>
             <% category.children.each do |subcategory| %>
                <li>  <%= subcategory.name %></li>
             <% end %>
           </ul>
        <% end %>
     </li>
  <% end %>
</ul>
 </div>
  <div class='field'>
    <%= f.label :code -%>
    <%= f.text_field :code -%>
  </div>
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>

  <div class='field'>
    <%= f.label :downloadpath -%>
    <%= f.text_field :downloadpath -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @product.image,
               :toggle_image_display => false -%>
  </div>
  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author -%>
  </div>
  <div class='field'>
    <%= f.label :exchange -%>
    <%= f.number_field :exchange -%>
  </div>
  <div class='field'>
    <%= f.label :bonus -%>
    <%= f.number_field :bonus -%>
  </div>


  <div class='field'>
    <%= f.label :subcategory_id -%>
    <%= f.collection_select :subcategory_id, ::Refinery::Subcategories::Subcategory.all, :id, :name -%>
   </div>



  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.products.admin.products.product'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product.name) -%>
<% end -%>
